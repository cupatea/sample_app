<% if !@song.errors.empty? %>
   <div class = "alert alert-error">

      <ul>
         <% @resume.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>

   </div>
<% end %>

<div class = "well">
   <%= form_for @song, html: { multipart: true } do |f| %>
      <%= f.label :artist %>
      <%= f.text_field :artist %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :path %>
      <%= f.file_field :path %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>
